{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Регистрация</h1>

    <form method="post">
        <input type="email" id="email" name="email" required autocomplete="email" placeholder="Email" class="form-control mb-2">
        <input type="password" id="password" name="password" required autocomplete="current-password" placeholder="Пароль" class="form-control mb-2">

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.patronymic) }}
        {{ form_row(registrationForm.phone) }}
        {{ form_row(registrationForm.birthday) }}
        {{ form_row(registrationForm.sex) }}   
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
    </form>

{% endblock %}
