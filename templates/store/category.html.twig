{% extends 'base.html.twig' %}

{% block title %}
    {% if title is defined %}
        {{ title }}
    {% else %} 
        Каталог
    {% endif %}
{% endblock %}

{% block body %}
    <div class="container mb-3 mt-4">
    
    

    <nav class="nav flex-column" style="width: 20%; position: absolute"> 
        {% if categories is not empty %}
            {% for category in categories %}
                <div>
                <a class="nav-link" href="/catalog/{{ category.id }}">
                    {{ category.name }}
                </a>
                </div>
            {% endfor %}
        {% endif %}
    </nav>



    {% if products is not empty %}
        
        <div class="row g-4" style="margin-left: 20%">
            {% for product in products %}
                <div class="col-4">
                    <div class="card" style="height: 400px; width:100%">
                        <img style="width: 100%; height: auto; object-fit: cover" src="{{ product.imageUrl}}" class="card-img-top" alt="{{ product.name }}">
                        <div class="card-body">
                            <b>{{ product.name }}</b>                               
                        </div>
                        <div class="card-footer">
                            <a href="/product/{{ product.id }}">Подробнее</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        
    {% else %}
        <div class="alert alert-danger" role="alert">
            {{ error }}
        </div>
    {% endif %}

    
    
    </div>
{% endblock %}